<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('../src/header') %>
    <link rel="stylesheet" href="<%= hostUrl %>/resources/admin/styles->main.css">
    <title>تعديل كلمة المرور</title>
  </head>
  <body>
    <form method="post" action="" class="form" novalidate>
      <h2 class="text-center">إنشاء كلمة سر الحساب</h2>

      <div class="form-group">
        <h5>كلمة السر:</h5>
        <input type="password" class="form-control <%= validates.password ? 'is-invalid': '' %>" name="password" value="<%= values.password %>">
        <div class="invalid-feedback ">
          <%= validates.password %>
        </div>
      </div>
      <div class="form-group">
        <h5>كلمة سر التأكيد:</h5>
        <input type="password" class="form-control <%= validates.confirm ? 'is-invalid': '' %>" name="confirm" value="<%= values.confirm %>">
        <div class="invalid-feedback ">
          <%= validates.confirm %>
        </div>
      </div>

      <input type="submit" class="btn form-btn btn-primary btn-lg btn-block" value="تسجيل الدخول" name="login"/>
      <br>
      <%- include('../src/footer') %>
    </form>
    <div id="alerts" class="noties topright"></div>
    <script src="<%= hostUrl %>/resources/admin/scripts->main.js"></script>
    <script>
      <% alertMessages.forEach(alertMessage => {%>
        alertMessage('account-verify',
          '<%= alertMessage.success ? "نجاح:" : "خطأ:" %>',
          '<%= alertMessage.message %>',
          '<%= alertMessage.type %>');
      <%});%>
    </script>
  </body>
</html>