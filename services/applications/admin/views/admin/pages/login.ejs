<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('../src/header') %>
    <link rel="stylesheet" href="<%= hostUrl %>/resources/admin/styles->main.css">
    <title>تسجيل الدخول</title>
  </head>
  <body>
    <form method="post" action="" class="form" novalidate>
      <h2 class="text-center">تسجيل الدخول</h2>

      <div class="form-group">
        <h5>البريد الإلكتروني:</h5>
        <input type="text" class="form-control <%= validates.email ? 'is-invalid': '' %>" name="email" value="<%= values.email %>" required>
        <div class="invalid-feedback ">
          <%= validates.email %>
        </div>
      </div>

      <div class="form-group">
        <h5>كلمة السر:</h5>
        <input type="password" class="form-control <%= validates.password ? 'is-invalid': '' %>" name="password" value="<%= values.password %>" required>
        <div class="invalid-feedback ">
          <%= validates.password %>
        </div>
      </div>

      <!-- <div class="form-group" style="float: left; font-size: 1rem; font-weight: 500; margin: 0px auto 20px auto;">
        <div class="custom-control custom-checkbox">
          <input type="checkbox" class="custom-control-input" id="remember-me" name="remember_me" value="true" <%= 'checked' ? values.remember_me : '' %>>
          <label class="custom-control-label" for="remember-me">Remember me</label>
        </div>
      </div> -->


      <input type="submit" class="btn form-btn btn-primary btn-lg btn-block" value="تسجيل الدخول" name="login"/>
      <br>
      <%- include('../src/footer') %>
    </form>
    <script src="<%= hostUrl %>/resources/admin/scripts->main.js"></script>
  </body>
</html>